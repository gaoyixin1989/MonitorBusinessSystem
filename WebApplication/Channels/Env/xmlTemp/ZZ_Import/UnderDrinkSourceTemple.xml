      <Item column="19">高锰酸盐指数</Item>
	  <Item column="20">硝酸盐</Item>
      <Item column="21">亚硝酸盐</Item>
      <Item column="22">氨氮</Item>
      <Item column="23">氟化物</Item>
      <Item column="24">总氰化物</Item>
      <Item column="25">汞</Item>
      <Item column="26">砷</Item>
